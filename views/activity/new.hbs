<div>
    <a href="/family">Home</a> /
    <a href="/family/{{familyId}}">Profile</a> /
    <a href="/family/{{familyId}}/members">Members</a> /
    <a href="/family/{{familyId}}/members/{{member._id}}">{{member.name}}</a> / New Activity
</div>
<div>
    <form action="/family/{{familyId}}/members/{{member._id}}/activity" method="POST">
        <h2>New Activity</h2>
        <div class="form-input">
            <label for="title">Title</label>
            <input type="text" name="title">
        </div>
        <div class="form-input">
            <label for="description">Description</label>
            <input type="text" name="description">
        </div>
        <div class="button-container flex-end">
            <input class="button primary" type="submit" value="Create Activity">
            <a href="/family/{{familyId}}/members/{{member._id}}" class="button warning">Cancel</a>
        </div>
    </form>
</div>