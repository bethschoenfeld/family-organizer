<div>
    <h3>Edit Page</h3>
</div>
<div>
    <h2>Edit A Member:</h2>
    <form action="/family/{{familyId}}/members/{{memberId}}?_method=PUT" method="POST">
        <div>
            <label for="name">Member Name:</label>
                <input type="text" name="name" value="{{member.name}}">
        </div>

        <div class="form-input">
            <label for="age">Age:</label>
            <input type="text" name="age" value="{{member.age}}">
        </div>

        <div>
            <input class="button primary" type="submit" value="Edit Member">
            <a href="/family/{{familyId}}/members" class="button warning">Cancel</a>
        </div>
    </form>
</div>